<div class="container m-5 ">
  <div class="row  justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="d-block text-primary display-4">
        <%=  @plan.name %>
      </div>
      <br>
      <div class="d-block fs-3">
        <strong> <%= "Description:" %> </strong> <%= @plan.description %>
      </div>
      <div class="d-block fs-3">
        <strong> <%= "Location:" %> </strong> <%= @plan.location %>
      </div>
      <div class="d-block fs-3">
        <strong> <%= "Category:" %> </strong> <%= @plan.category %>
      </div>
      <div class="d-block fs-3">
        <strong> <%= "Intensity:" %> </strong> <%= @plan.intensity %>
      </div>
      <div class="d-block fs-3">
        <strong> <%= "Starts:" %> </strong> <%= @plan.starting_time %>
      </div>
      <div class="d-block fs-3">
        <strong> <%= "Ends:" %> </strong> <%= @plan.finish_time %>
      </div>
      <br>
      <%#= current_user.id %>
      <%#= @plan.user_id %>
      <div class="d-flex align-items-center justify-content-between mb-3">
      <% if current_user.id == @plan.user_id %>
        <%= button_to "Delete plan", plan_path(@plan), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %>
        <%= link_to "Edit", edit_plan_path(@plan), class: "btn btn-primary" %>
        <%= link_to "Booking", new_plan_booking_path(@plan), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
