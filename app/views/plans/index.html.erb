    <div class="container mx-auto mt-8">
      <div class="d-flex align-items-center justify-content-between mb-3 cover">
        <div class="position-absolute top-50 start-50 translate-middle">
        <%= link_to "Publica tu parche", new_plan_path, class: "btn btn-outline-light btn-lg" %>
        </div>

      </div>
    </div>

    <div class="container mb-5 mt-5">
      <div class="row">
      <% @plans.each do |plan| %>
        <div class="col-lg-4">
            <div class="card h-100 d-flex justify-content-between" style="width: 21rem ">
          <% if plan.photo.attached?%>
            <%= cl_image_tag plan.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
          <% end %>
                  <div class="card-body">
                  <h5 class="card-title"><%= plan.name %></h5>

                  <center>
                  <div class= "btn btn-primary mx-auto text-center text-decoration-none">
                    <%= link_to "Armemos parche", plan_path(plan), class:"text-decoration-none"%>
                  </div>
                  </center>
                  </div>
              </div>
        </div>
      <% end %>
      </div>
    </div>
